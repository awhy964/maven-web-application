//Checkout Code State
stage('CheckoutCode'){
git branch: 'development', credentialsId: 'cb470af9-2e60-481b-801e-9b475ebf3b9f', url: 'https://github.com/awhy964/maven-web-application.git'
}

//Build
stage ('Build'){
sh "${mavenHome}/bin/mvn clean package"
}

